@model UpdatePasswordViewModel
@{
    ViewBag.Title = "Update Password";
}


<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="https://cdn.discordapp.com/attachments/767792433353195581/788838300370075678/aybo-01.png" alt="IMG">
            </div>

            <form asp-action="ForgotPassword" class="login100-form validate-form">
                <span class="login100-form-title">
                    Rest Password 
                </span>
                <div class="wrap-input100 validate-input mb-1">
                    <input class="input100" type="password" asp-for="Password" name="Password" placeholder="Password">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>
                <small>
                    <span asp-validation-for="Password" class="text-danger ml-4"></span>
                </small>

                <div class="wrap-input100 validate-input mb-1">
                    <input class="input100" type="password" asp-for="RePassword" name="RePassword" placeholder="Repeat Password">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-redo" aria-hidden="true"></i>
                        <i class="fa fa-lock" aria-hidden="true"></i>

                    </span>
                </div>
                <small>
                    <span asp-validation-for="RePassword" class="text-danger ml-4"></span>
                </small>
                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn">
                        Login
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("/Views/Shared/_ValidationScriptsPartial.cshtml");}
}