<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VesizleMvcCore</title>
    @*<link href="~/lib/vesile.min.css" rel="stylesheet" />*@
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
    <link href="~/css/login.css" rel="stylesheet" />
    <link href="~/css/home.css" rel="stylesheet" />
    <link href="~/css/navbar.css" rel="stylesheet" />
    <link href="~/css/movieDetails.css" rel="stylesheet" />
    <link href="~/css/util.css" rel="stylesheet" />
    <link href="~/css/profile.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/node_modules/bootstrap/dist/css/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/node_modules/bootstrap/dist/css/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Jura:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    <link href="~/node_modules//toastify-js/src/toastify.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar">
        <a class="navbar-brand text-warning mx-auto" href="@Url.Action("Index", "Home")">Vesile</a>
        
        @if (User.Identity.IsAuthenticated)
        {
            <div class="dropdown">
                <button class="btn btn-outline-warning btn-light navbar-right my-2 my-sm-0 dropdown-toggle" id="loginBtn" type="button">
                    <i class="far fa-compass"></i> Menu 
                </button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="@Url.Action("Favorites", "Profile")">> Favorites <i class="fa fa-heart"></i></a>
                    <a class="dropdown-item" href="@Url.Action("WatchList", "Profile")">> Watch List <i class="fa fa-eye"></i></a>
                    <a class="dropdown-item" href="@Url.Action("WatchedList", "Profile")">> Watched List <i class="fa fa-ticket-alt"></i></a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="@Url.Action("Index", "Profile")">> Profile <i class="far fa-id-card"></i></a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="@Url.Action("Logout", "Auth")">> Logout <i class="fas fa-sign-out-alt"></i></a>
                </div>
            </div>
        }
        else
        {
            <button id="loginBtn" class="btn btn-outline-warning btn-light navbar-right my-2 my-sm-0" onclick="location.href='@Url.Action("Login", "Auth")'">Login <i class="fas fa-sign-in-alt"></i></button>
        }


    </nav>
    <div class="stickyFrame"></div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - VesizleMvcCore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @*<script src="~/lib/combined.min.js"></script>*@
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>

    <script src="~/node_modules/toastify-js/src/toastify.js"></script>
    @RenderSection("scripts", false)
    @RenderSection("AjaxReq", false)
</body>
</html>
