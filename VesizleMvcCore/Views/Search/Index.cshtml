@model SearchViewModel

@{
    ViewBag.Title = "Search Detail";
}


    <div class="container h-100 m-t-25">
        <div class="d-flex justify-content-center h-100">
            <div class="searchbar">
                <form class="searchbar-form" method="post">
                    <button type="submit" class="btn btn-default">
                        <span class="fas fa-search" aria-hidden="true"></span>
                    </button>
                    <input name="query" class="search_input" type="text" placeholder="Search for a Movie, Tv Series...">
                </form>
            </div>
        </div>
    </div>
    <div class="searchContainer">
    @foreach (var item in Model.Results)
    {
        <div class="searchBlock">
            <div class="row">
                <div class="column">
                    <a href="/movie/details/@item.Id" title="@item.Title">
                        <img class="searchPoster" src="@item.PosterPath">
                    </a>
                    <div class="textBlock">
                        <a href="/movie/details/@item.Id" title="@item.Title">
                            <h3>@item.Title</h3>
                            <h6>@item.ReleaseDate</h6>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    
    @*PAGE FOOTer*@
    </div>